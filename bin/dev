#!/usr/bin/env ts-node

import { dev } from '../dist/dev.js';

const projectRoot = process.cwd(); // projectRoot is the current working directory
const cliArgs = process.argv.slice(2); // Actual CLI arguments start from the second position

// Temporarily set process.argv for parseArguments
const originalArgv = process.argv;
process.argv = ['node', 'script.js', ...cliArgs]; // Mock process.argv for parseArguments

dev(projectRoot);

process.argv = originalArgv; // Restore original process.argv
